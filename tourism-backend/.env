# Environment Variables
NODE_ENV=development
PORT=5000

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/tourism-website
# For production, use your MongoDB Atlas connection string:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/tourism-website?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Email Configuration
EMAIL_FROM=no-reply@yourtourismwebsite.com
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_EMAIL=your_mailtrap_username
SMTP_PASSWORD=your_mailtrap_password

# File Storage (local, s3)
FILE_STORAGE_TYPE=local
MAX_FILE_SIZE=5242880

# Frontend URL for callbacks/redirects
FRONTEND_URL=http://localhost:8080

# Daraja API Configuration (M-Pesa)
DARAJA_CONSUMER_KEY=your_daraja_consumer_key
DARAJA_CONSUMER_SECRET=your_daraja_consumer_secret
DARAJA_PASSKEY=your_daraja_passkey
DARAJA_SHORTCODE=your_daraja_shortcode
DARAJA_BASE_URL=https://sandbox.safaricom.co.ke
DARAJA_CALLBACK_URL=https://your-api-url.com/api/v1/payments/callback

# Logging
LOG_LEVEL=info